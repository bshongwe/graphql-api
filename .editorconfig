# EditorConfig helps maintain consistent coding styles
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 80

[*.{ts,js,tsx,jsx}]
indent_style = space
indent_size = 2
max_line_length = 80

[*.{json,yaml,yml}]
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false
max_line_length = 80

[*.sh]
indent_style = space
indent_size = 2
max_line_length = 80

[Makefile]
indent_style = tab
